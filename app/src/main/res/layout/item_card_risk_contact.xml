<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey1"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/cardRiskContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingBottom="6dp">

        <!-- Columna Izquierda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingStart="6dp">
            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/txtContactDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/06/2021"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!-- Horas de Inicio y de Fin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Hora de Inicio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/startHour"
                        android:layout_marginEnd="6dp"/>
                    <TextView
                        android:id="@+id/txtContactStartHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:57"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textStyle="bold"/>
                </LinearLayout>
                <!-- Hora de fin -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/endHour"
                        android:layout_marginEnd="6dp"/>
                    <TextView
                        android:id="@+id/txtContactEndHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:17"
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Tiempo de exposición -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exposeTime"/>
                    <TextView
                        android:id="@+id/txtContactExposeTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="15 min"
                        android:textColor="@color/deepBlue"
                        android:textStyle="bold"/>
                </LinearLayout>
                <!-- Proximidad media -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meanProximity"/>

                    <TextView
                        android:id="@+id/txtContactMeanProximity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 m"
                        android:gravity="start"
                        android:textColor="@color/deepBlue"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Columna Derecha-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:paddingEnd="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/riskPercent"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:textAppearance="?attr/textAppearanceOverline"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtHighestRiskPercentDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12,34%"
                    android:textSize="20sp"
                    android:textAppearance="?attr/textAppearanceSubtitle2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingEnd="8dp">
                <!-- Botón para mostrar el contacto en el mapa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowContactInMap"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="end"
                    app:icon="@android:drawable/ic_dialog_map"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    style="?attr/materialButtonOutlinedStyle"
                    app:iconTint="@color/black"
                    app:strokeWidth="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>