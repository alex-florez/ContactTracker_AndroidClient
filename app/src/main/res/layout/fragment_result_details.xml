<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.riskcontacts.ResultDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <!-- Contacto de mayor riesgo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/riskiestContact"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Contacto de mayor nivel de riesgo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp">
            <LinearLayout
                android:id="@+id/cardRiskiestContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:background="@color/orangeWarning">
                <!-- Columna Izquierda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingTop="6dp"
                    android:paddingStart="6dp"
                    android:paddingBottom="6dp">
                    <!-- Fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txtContactDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/06/2021"
                            android:textStyle="bold"
                            android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    </LinearLayout>
                    <!-- Horas de Inicio y de Fin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Hora de Inicio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/startHour"
                                android:layout_marginEnd="6dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/txtContactStartHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:57"
                                android:textAppearance="?attr/textAppearanceSubtitle2"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <!-- Hora de fin -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/endHour"
                                android:layout_marginEnd="6dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/txtContactEndHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16:17"
                                android:textAppearance="?attr/textAppearanceSubtitle2"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Tiempo de exposición -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exposeTime"
                                android:layout_marginEnd="0dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/txtContactExposeTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 min"
                                android:textColor="@color/deepBlue"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <!-- Proximidad media -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/meanProximity"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txtContactMeanProximity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 m"
                                android:textStyle="bold"
                                android:textColor="@color/deepBlue"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Columna Derecha-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:paddingEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/riskPercent"
                            android:textSize="12sp"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            android:textAppearance="?attr/textAppearanceOverline"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txtHighestRiskPercentDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.34%"
                            android:textSize="20sp"
                            android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingEnd="8dp">
                        <!-- Botón para mostrar el contacto en el mapa -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShowContactInMap"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="end"
                            app:icon="@android:drawable/ic_dialog_map"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:iconTint="@color/black"
                            app:strokeWidth="2dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Datos generales sobre los resultados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generalData"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"
                            android:text="@string/numberPositives"/>
                        <TextView
                            android:id="@+id/txtNumberOfPositivesDetails"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textStyle="bold"
                            android:textColor="@color/red1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanRisk"/>

                        <TextView
                            android:id="@+id/txtTotalMeanRisk"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="20 %"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanExposeTime"/>
                        <TextView
                            android:id="@+id/txtTotalMeanExposeTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="20 min"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.4"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanProximity"/>
                        <TextView
                            android:id="@+id/txtTotalMeanProximity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="20 m"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Listado con todos los contactos de riesgo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <!-- Título de contactos de riesgo + separador -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/riskContacts"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="6dp"/>

            <!-- RecycleView con el listado de todos los contactos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRiskContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>