<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.riskcontacts.ResultDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <!-- Contacto de mayor nivel de riesgo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Columna Izquierda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/riskiestContact"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <!-- Fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:id="@+id/txtContactDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/06/2021"/>
                    </LinearLayout>
                    <!-- Horas de Inicio y de Fin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Hora de Inicio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/startHour"
                                android:layout_marginEnd="6dp"/>
                            <TextView
                                android:id="@+id/txtContactStartHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:57"/>
                        </LinearLayout>
                        <!-- Hora de fin -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/endHour"
                                android:layout_marginEnd="6dp"/>
                            <TextView
                                android:id="@+id/txtContactEndHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16:17"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Tiempo de exposición -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exposeTime"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:id="@+id/txtContactExposeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"/>
                    </LinearLayout>
                    <!-- Proximidad media -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meanProximity"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/txtContactMeanProximity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 m"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Columna Derecha-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/riskPercent"
                            android:textSize="12sp"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"/>

                        <TextView
                            android:id="@+id/txtHighestRiskPercentDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12%"
                            android:textSize="20sp"
                            android:textAppearance="?attr/textAppearanceSubtitle2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <!-- Botón para mostrar el contacto en el mapa -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShowContactInMap"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            app:icon="@android:drawable/ic_dialog_map"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Datos generales sobre los resultados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generalData"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/numberPositives"
                            android:layout_marginEnd="6dp"/>
                        <TextView
                            android:id="@+id/txtNumberOfPositivesDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanRisk"
                            android:layout_marginEnd="6dp"/>
                        <TextView
                            android:id="@+id/txtTotalMeanRisk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 %"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanExposeTime"
                            android:layout_marginEnd="6dp"/>
                        <TextView
                            android:id="@+id/txtTotalMeanExposeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 min"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/totalMeanProximity"
                            android:layout_marginEnd="6dp"/>
                        <TextView
                            android:id="@+id/txtTotalMeanProximity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 m"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <!-- Listado con todos los contactos de riesgo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">
            <!-- Título de contactos de riesgo + separador -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/riskContacts"
                android:textAppearance="?attr/textAppearanceHeadline6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- RecycleView con el listado de todos los contactos -->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>