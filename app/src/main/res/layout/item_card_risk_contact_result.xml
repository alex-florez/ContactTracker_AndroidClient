<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey1"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <!-- Fecha de la comprobación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtResultDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="11/06/2021"/>

            <TextView
                android:id="@+id/txtResultHour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10:13"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Columna izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Número de positivos con los que se entró en contacto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/contactWith"/>
                <TextView
                    android:id="@+id/txtNumberOfPositives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 positivos"
                    android:textColor="@color/red1"
                    android:textSize="16sp"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>
            </LinearLayout>

            <!-- Porcentaje de riesgo más alto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="@string/txtRiskPercent"/>
                <TextView
                    android:id="@+id/txtHighestRiskPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/riskPercentPlaceholder"
                    android:textSize="24sp"
                    android:gravity="end"
                    android:textAppearance="?attr/textAppearanceHeadline6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>