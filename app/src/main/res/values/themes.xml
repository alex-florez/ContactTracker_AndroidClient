<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactTracker" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Estilo de la barra inferior de navegaciÃ³n -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

    <style name="Theme.ContactTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView.Colored"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.App.BottomNavigationView
        </item>
    </style>

    <!-- Estilo para la SplashScreen -->
    <style name="SplashTheme" parent="Theme.ContactTracker">
        <item name="android:windowBackground">
            @drawable/splashscreen
        </item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- App Bar Style -->
    <style name="Theme.ContactTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>